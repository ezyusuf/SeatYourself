<h1>Add a restaurant</h1>

<%= form_for @restaurant do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :website_url %>
    <%= f.text_field :website_url %>
  </div>
  <div class="field">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to "Back to all restaurants", restaurants_path %>
