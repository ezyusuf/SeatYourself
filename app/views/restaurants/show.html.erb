
<h1><%= @restaurant.name %></h1>
<%= image_tag @restaurant.image.url(:medium) %>
<p><%= @restaurant.description %></p>
<div> <%= @restaurant.address %></div>
<%= link_to "Website", @restaurant.website_url %>

<% if current_user %>
  <%= form_for([@restaurant, @reservation], :html => {:class => 'reserveform'}) do |f| %>
      <%= f.label :time %>
      <%= f.select :time, @hours_open %>
      <%= f.label :party_size %>
      <%= f.text_field :party_size %>
      <div class="times">
        <% @restaurant.hours_open.each do |h| %>
          <%= f.radio_button :time, h %>
          <%= f.label "time_#{h}", new_time(h), class: "reserve" %>
        <% end %>
      </div>
      <%= f.submit %>
  <% end %>
<% end %>

<% @restaurant.reservations.each do |reservation| %>
  <p>
    Reservation Time: <%= reservation.time %>,
    No of People: <%= reservation.party_size %> people
    <br>
    <% if reservation.user != nil %>
      <em> by <%= reservation.user.email %></em>
      Added on: <%= reservation.created_at %>
    <% end %>
    <br>
    <%= link_to "Delete", restaurant_reservation_path(@restaurant, reservation), method: :delete %>
  </p>
<% end %>

<div>
<%= link_to "Back to all restaurants", restaurants_path %>
</div>

